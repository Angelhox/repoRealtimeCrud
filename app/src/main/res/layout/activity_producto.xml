<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".productoActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/trans"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registro Productos"
            android:textSize="20pt"
            android:layout_marginBottom="50pt"/>

    <EditText
        android:id="@+id/etcodigoProducto"
        android:layout_width="150pt"
        android:layout_height="20pt"
        android:hint="CÃ³digo del Producto"
        android:textStyle="italic"/>

        <EditText
            android:id="@+id/etnombreProducto"
            android:layout_width="150pt"
            android:layout_height="20pt"
            android:layout_marginVertical="5pt"
            android:hint="Nombre del Producto"
            android:textStyle="italic" />
        <EditText
            android:id="@+id/etStockProducto"
            android:layout_width="150pt"
            android:layout_height="20pt"
            android:layout_marginVertical="5pt"
            android:hint="Stock del Producto"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/etPrecioCosto"
            android:layout_width="150pt"
            android:layout_height="20pt"
            android:hint="Precio costo del Producto"
            android:textStyle="italic"/>
        <EditText
            android:id="@+id/etPrecioVenta"
            android:layout_width="150pt"
            android:layout_height="20pt"
            android:layout_marginTop="5pt"
            android:hint="Precio venta del Producto"
            android:textStyle="italic"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80pt">
                <Button
                    android:id="@+id/btnGuardar"
                    android:layout_width="70pt"
                    android:background="@drawable/button_rounded"
                    android:layout_height="20pt"
                    android:layout_marginTop="10pt"
                    android:layout_marginLeft="15pt"
                    android:text="Guardar"/>
            <Button
                android:id="@+id/btnBuscar"
                android:layout_width="70pt"
                android:layout_height="20pt"
                android:layout_marginTop="35pt"
                android:layout_marginLeft="15pt"
                android:background="@drawable/button_rounded"
                android:text="Buscar"/>
            <Button
                android:id="@+id/btnActualizar"
                android:layout_width="70pt"
                android:layout_height="20pt"
                android:layout_marginTop="10pt"
                android:layout_marginLeft="15pt"
                android:background="@drawable/button_rounded"
                android:layout_toEndOf="@+id/btnGuardar"
                android:text="Actualizar"/>
            <Button
                android:id="@+id/btnBorrar"
                android:layout_width="70pt"
                android:layout_height="20pt"
                android:background="@drawable/button_rounded"
                android:layout_toEndOf="@+id/btnBuscar"
                android:layout_marginTop="35pt"
                android:layout_marginLeft="15pt"
                android:text="Borrar"/>
            <Button
                android:id="@+id/btnRegresar"
                android:layout_width="70pt"
                android:layout_height="20pt"
                android:background="@drawable/button_rounded"
                android:layout_marginTop="60pt"
                android:layout_marginLeft="60pt"
                android:text="Regresar"/>


        </RelativeLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>